{
  "stage_id": "day_flow_orchestrator",
  "description": "Decides proactive wellness suggestions based on all available context",
  
  "run_policy": {
    "type": "always",
    "min_interval_seconds": 300
  },
  "afk_guard": {
    "skip_when_afk": true,
    "skip_when_potentially_afk": true
  },
  
  "lookback_hours": {
    "calendar_events": 4,
    "chat_messages": 2,
    "recent_tickets": 2
  },
  
  "suggestion_limits": {
    "max_pending_per_type": 1,
    "cooldown_after_dismiss_minutes": 30
  },
  
  "daily_reset": {
    "description": "Clear orchestrator output at 5AM boundary",
    "output_resource_defaults": {
      "suggestions": [],
      "suggestion_type": null,
      "last_updated": null
    }
  }
}
