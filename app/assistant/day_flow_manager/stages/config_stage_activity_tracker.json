{
  "stage_id": "activity_tracker",
  "description": "Wellness activity tracking (stretches, hydration, coffee, meals)",
  
  "activities": {
    "finger_stretch": {
      "display_name": "Finger Stretch",
      "field_name": "finger_stretch",
      "init_on_cold_start": true,
      "reset_on_afk": true,
      "reset_daily": true,
      "threshold": {
        "minutes": 25,
        "label": "Every 20 to 30 min of typing (chronic pain)"
      },
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    },
    "standing_break": {
      "display_name": "Standing Break",
      "field_name": "standing_break",
      "init_on_cold_start": true,
      "reset_on_afk": true,
      "reset_daily": true,
      "threshold": {
        "minutes": 50,
        "label": "Every 45 to 60 min of sitting"
      },
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    },
    "hydration": {
      "display_name": "Hydration",
      "field_name": "hydration",
      "init_on_cold_start": true,
      "reset_on_afk": false,
      "reset_daily": true,
      "threshold": {
        "minutes": 120,
        "label": "Every 2 to 3 hours"
      },
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    },
    "coffee": {
      "display_name": "Coffee",
      "field_name": "coffee",
      "init_on_cold_start": false,
      "reset_on_afk": false,
      "reset_daily": true,
      "guidance": "Max 2 per day before 4pm",
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    },
    "meal": {
      "display_name": "Meal",
      "field_name": "meal",
      "init_on_cold_start": false,
      "reset_on_afk": false,
      "reset_daily": true,
      "reset_triggers": ["chat", "ticket", "calendar"],
      "calendar_keywords": ["Breakfast", "Lunch", "Dinner", "Meal"],
      "guidance": "Typical windows: 7 to 9am, 11am to 1pm, 5 to 7pm",
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    },
    "snack": {
      "display_name": "Snack",
      "field_name": "snack",
      "init_on_cold_start": false,
      "reset_on_afk": false,
      "reset_daily": true,
      "reset_triggers": ["chat", "ticket"],
      "guidance": "As needed",
      "defaults": {
        "count_today": 0,
        "last_utc": null
      }
    }
  },
  
  "daily_reset": {
    "description": "Reset all activity counts and timestamps at 5AM boundary",
    "output_resource_defaults": {
      "activity_counts": {
        "finger_stretch": 0,
        "standing_break": 0,
        "hydration": 0,
        "coffee": 0,
        "meal": 0,
        "snack": 0
      },
      "minutes_since": {
        "finger_stretch": 0,
        "standing_break": 0,
        "hydration": 0,
        "coffee": 0,
        "meal": 0,
        "snack": 0
      },
      "activities_reset": []
    }
  }
}
